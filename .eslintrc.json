{
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier",
      "prettier/react"
    ],
    "rules": {
      "react/prop-types": 0,
      "jsx-a11y/label-has-for": 0,
      "no-console": 1,
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error"
    },
    "plugins": ["react", "import", "jsx-a11y"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    
        "settings": {
          "react": {
            "createClass": "createReactClass", 
                                               
            "pragma": "React",  
            "version": "16.5.2", 
            "flowVersion": "0.53" 
          },
          "propWrapperFunctions": [ "forbidExtraProps" ] 
        }
      
  }